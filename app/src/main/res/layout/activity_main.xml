<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/guide_v1"
        app:layout_constraintGuide_percent=".70"/>
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/guide_v2"
        app:layout_constraintGuide_percent=".30"/>
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/guide_v3"
        app:layout_constraintGuide_percent=".36"/>
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/guide_v4"
        app:layout_constraintGuide_percent=".64"/>
    <ImageView
        android:layout_width="100dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintStart_toStartOf="parent"
        android:scaleType="fitXY"
        android:id="@+id/viewA"
        android:src="@drawable/cupcake"
        app:layout_constraintTop_toTopOf="parent"
        />
    <ImageView
        android:layout_width="100dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:scaleType="fitXY"
        android:id="@+id/viewB"
        app:layout_constraintEnd_toEndOf="parent"
        android:src="@drawable/download"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>
    <ImageView
        android:layout_width="100dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="20dp"
        android:scaleType="fitXY"
        app:layout_constraintLeft_toRightOf="@id/viewA"
        app:layout_constraintRight_toLeftOf="@id/viewB"
        android:id="@+id/viewC"

        android:src="@drawable/fruit"
        />
    <View
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginTop="100dp"
        android:id="@+id/pink1"
        android:layout_marginLeft="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewA"
        app:layout_constraintEnd_toEndOf="@id/guide_v3"
        android:background="@color/Pink"/>
    <View
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginTop="100dp"
        android:id="@+id/pink2"
        android:layout_marginRight="30dp"
        app:layout_constraintStart_toStartOf="@id/guide_v4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewC"
        android:background="@color/Pink"/>
    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        app:layout_constraintLeft_toLeftOf="@id/guide_v2"
        app:layout_constraintRight_toRightOf="@id/guide_v1"
        app:layout_constraintTop_toTopOf="@id/pink2"
        app:layout_constraintBottom_toBottomOf="@id/pink2"
        android:src="@drawable/quotes"/>
    <View
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:id="@+id/pink3"
        android:background="@color/lightestpink"
        app:layout_constraintTop_toBottomOf="@id/pink1"
        android:layout_marginTop="75dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"/>
    <View
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:background="#F56DBE"
        app:layout_constraintTop_toBottomOf="@id/pink3"
        android:layout_marginTop="25dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="20dp"/>




</androidx.constraintlayout.widget.ConstraintLayout>